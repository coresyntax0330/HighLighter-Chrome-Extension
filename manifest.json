{
  "manifest_version": 3,
  "name": "Auto Highlighter",
  "version": "1.0",
  "description": "Automatically highlights certain words on a page",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["<all_urls>", "http://45.15.160.247:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
