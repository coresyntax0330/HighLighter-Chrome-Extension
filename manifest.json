{
  "manifest_version": 3,
  "name": "Auto Highlighter",
  "version": "1.0",
  "description": "Automatically highlights certain words on a page",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["<all_urls>", "http://45.15.160.247:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
